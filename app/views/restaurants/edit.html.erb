<div class="bg-content">
  <!-- content -->
  <div id="content">
    <div class="ic"></div>
    <div class="container">
      <div class="row">
        <article class="span8">
          <h3>Edit restaurant</h3>
          <div class="inner-1">
            <%= form_for (@restaurant), url: {action: "update"} do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %><br>
              <%= f.label :description %>
              <%= f.text_area :description %><br>
              <%= f.select :category_id, Category.all.map { |f| [f.name, f.id] } %>
              <%= f.label :address %>
              <%= f.text_field :address %><br>
              <%= f.label :city %>
              <%= f.text_field :city %><br>
              <%= f.label :state %>
              <%= f.text_field :state %><br>
              <%= f.label :zipcode %>
              <%= f.text_field :zipcode %><br>
              <%= f.label :phone %>
              <%= f.text_field :phone %><br>
              <%= f.submit class:"btn btn-1" %>
            <% end %>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>