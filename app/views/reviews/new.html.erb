<div class="bg-content">
  <!-- content -->
  <div id="content">
    <div class="ic"></div>
    <div class="container">
      <div class="row">
        <article class="span8">
          <h3>Add new review</h3>
          <div class="inner-1">
            <%= form_for [@restaurant, @review], url: {action: "create"} do |f| %>
            	<%= f.label :comment %>
      				<%= f.text_area :comment %><br>
      				<%= f.label :rating %>
      				<%= f.number_field :rating, value: 1, min: 1, max: 5 %><br>
      				<%= f.submit class:"btn btn-1"%>
    			  <% end %>
          </div>
        </article>
      </div>
   </div>
  </div>
</div>
